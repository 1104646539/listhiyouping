<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="8dp"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:background="@color/base_bg_color"
              android:layout_margin="2dp">

    <ImageView
        android:id="@+id/free_grid_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/free_item_grid_height"
        android:scaleType="centerCrop"
        android:src="@drawable/free_grid_photo"/>

    <TextView
        android:id="@+id/free_grid_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="【利世优品】万仟堂陶瓷 同心杯带盖过滤办公室...【利世优品】万仟堂陶瓷 同心杯带盖过滤办公室..."
        android:textColor="@color/text_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/free_grid_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="￥286"
            android:textColor="@color/text_red"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/free_grid_limitNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="限量150件"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/free_grid_peopleNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="125人已申请"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/free_grid_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/tv_background_red"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="限量150件"
            android:textColor="@color/text_red"
            android:textSize="12sp"/>
    </RelativeLayout>
</LinearLayout>