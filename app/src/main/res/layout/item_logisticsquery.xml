<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:padding="10dp"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_logisticsquery_photo"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/classity_item"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_logisticsquery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/item_cart_title"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_logisticsquery_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/text_gray"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/item_cart_info"
                android:textSize="10sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_logisticsquery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"
                    android:text="￥"
                    android:textColor="@android:color/holo_red_dark"/>

                <TextView
                    android:id="@+id/tv_logisticsquery_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/item_logisticsquery"
                    android:text="1999.00"
                    android:textColor="@android:color/holo_red_dark"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/tv_logisticsquery_query"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tv_background_green"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:paddingRight="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/tv_green"
                        android:clickable="true"
                        android:paddingTop="3dp"
                        android:text="物流跟踪"/>
                    <TextView
                        android:id="@+id/tv_logisticsquery_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tv_background_orange"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:visibility="gone"
                        android:textSize="12sp"
                        android:clickable="true"
                        android:textColor="@color/tv_orange"
                        android:paddingTop="3dp"
                        android:text="确认收货"/>
                    <TextView
                        android:id="@+id/tv_logisticsquery_wait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tv_background_black"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:clickable="true"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:paddingRight="10dp"
                        android:textColor="@color/tv_black"
                        android:paddingTop="3dp"
                        android:text="等待发货"/>
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_padding"/>
</LinearLayout>