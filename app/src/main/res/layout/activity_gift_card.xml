<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color"
    android:orientation="vertical"
    tools:context="com.lishi.baijiaxing.activity.GiftCardActivity">

    <com.lishi.baijiaxing.view.TopNavigationBar
        android:layout_width="match_parent"
        android:id="@+id/navigation_gificard"
        android:layout_height="40dp"
        android:background="@color/base_bg_color"
        app:left_src="@drawable/back_top"
        app:right_src="@null"
        app:text_title="礼品卡"
        app:title_color="@color/text_color"
        app:title_size="7sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shoppinglist"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换码"/>

        <EditText
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_black"
            android:hint="请输入礼品卡兑换码"
            android:padding="4dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cart_button_red"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="兑换"
            android:textColor="@color/base_bg_color"/>
    </LinearLayout>
</LinearLayout>
