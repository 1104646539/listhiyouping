<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/login_background"
    tools:context=".register.view.RegisterActivity3">

    <com.lishi.baijiaxing.view.TopNavigationBar
        android:id="@+id/navigation_register3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/base_bg_color"
        app:left_src="@drawable/back_top"
        app:right_src="@null"
        app:text_title="快速注册"
        app:title_color="@color/text_color"
        app:title_size="7sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shoppinglist"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_padding"
        android:layout_marginRight="@dimen/login_padding"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edittext_black"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:digits="@string/edittext_password_digits"
                android:id="@+id/edit_password_regisier3"
                android:background="@drawable/edittext_black"
                android:hint="请输入密码"
                android:paddingLeft="5dp"
                android:textColorHint="@color/hint_color"
                android:textSize="14sp"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/checkbox_register3_isvisibility"
                    android:layout_centerVertical="true"
                    android:button="@drawable/register_password"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/password_hint"
            android:textColor="@color/tv_black"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/register_next"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:id="@+id/tv_register3_next"
            android:paddingTop="8dp"
            android:text="完成"
            android:textColor="@color/base_bg_color"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>
