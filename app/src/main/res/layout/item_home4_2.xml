<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/item_padding"
              android:padding="2dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/item_home4_2_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/home4_1"/>

    <TextView
        android:id="@+id/item_home4_2_name"
        android:layout_width="match_parent"
        android:background="@color/base_bg_color"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/item4_2_name"
        android:layout_gravity="center_horizontal"
        android:text="万仟堂  陶瓷同心杯"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/item_home4_2_price"
        android:background="@color/base_bg_color"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:paddingBottom="8dp" 
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="299元"
        android:textColor="@color/home_item_textColor_orange"
        android:textSize="16sp"/>

</LinearLayout>