<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_myorderform"
    tools:context=".myOrders.MyOrderFormActivity">

    <com.lishi.baijiaxing.view.TopNavigationBar
        android:id="@+id/topbar_myOrder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:left_src="@drawable/back_top"
        app:right_src="@drawable/topbar_search"
        app:text_title="我的订单"
        app:title_color="@color/text_color"
        app:title_size="8sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_myorderform"
            android:layout_width="match_parent"
            android:background="@color/base_bg_color"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/rob_red"
            app:tabSelectedTextColor="@color/rob_red"
            app:tabTextColor="@color/text_color"></android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_myorderform"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </LinearLayout>
</LinearLayout>
