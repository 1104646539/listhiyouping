<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/checkbox_mycollect_commodity_isflag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginLeft="10dp"
            android:button="@drawable/cart_checked"
            android:focusable="false"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/iv_mycollect_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/classity_item"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mycollect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/item_cart_title"
                android:textSize="13sp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/item_mycollect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"
                    android:text="￥"
                    android:textColor="@android:color/holo_red_dark"/>

                <TextView
                    android:id="@+id/tv_mycollect_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/item_mycollect"
                    android:text="1999.00"
                    android:textColor="@android:color/holo_red_dark"/>

                <TextView
                    android:id="@+id/tv_mycollect_addcart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circler_mycollect"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="加入购物车"
                    android:textColor="@color/text_red"
                    android:textSize="10sp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_padding"/>
</LinearLayout>