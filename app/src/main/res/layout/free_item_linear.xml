<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:padding="12dp"
              android:layout_height="wrap_content"
              android:background="@color/base_bg_color"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/free_linear_photo"
        android:layout_width="@dimen/free_item_linear_height"
        android:layout_marginLeft="5dp"
        android:layout_height="@dimen/free_item_linear_height"
        android:background="@drawable/free_item_linear_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/free_item_linear_photo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/free_linear_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="【利世优品】万仟堂陶瓷 同心杯带盖过滤办公室...【利世优品】万仟堂陶瓷 同心杯带盖过滤办公室..."
            android:textColor="@color/text_color"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/free_linear_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="￥286"
                android:textColor="@color/text_red"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/free_linear_limitNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="限量150件"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/free_linear_peopleNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="125人已申请"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/free_linear_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/tv_background_red"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:text="限量150件"
                android:textColor="@color/text_red"
                android:textSize="12sp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>