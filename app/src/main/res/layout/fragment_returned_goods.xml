<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_myorderform"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/springView_order_returnedgoods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/listview_myorderform_returnedgoods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transcriptMode="disabled"
                android:background="@color/base_bg_color"
                android:divider="@color/background_myorderform"
                android:dividerHeight="10dp"/>
            <!--</LinearLayout>-->
            <!--</ScrollView>-->
        </com.liaoinstan.springview.widget.SpringView>

        <include
            android:id="@+id/returned_goods_order_null"
            layout="@layout/order_null"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>