<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="5dp"
              android:background="@color/base_bg_color"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/integral_exchange_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/integral_exchange_photo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:id="@+id/integral_exchange_name"
        android:maxLines="2"
        android:text="万仟堂 陶瓷同心杯"
        android:textColor="@color/text_color"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/integral_exchange_needIntegral"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:text="285积分"
        android:textColor="#fc8200"
        android:textSize="14sp"/>
</LinearLayout>