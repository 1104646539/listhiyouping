<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/src7"/>

    <TextView
        android:id="@+id/tv_recommend_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recommend_textmargin"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/recommend_textmargin"
        android:layout_marginTop="@dimen/recommend_textmargin"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/text_recommend_brief"
        android:textSize="@dimen/recommend_textsize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recommend_textmargin"
        android:layout_marginLeft="15dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_recommend_newprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/recommend_textmargin"
            android:text="￥ 260"
            android:textColor="@color/text_red"/>

        <TextView
            android:id="@+id/tv_recommend_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="￥ 342"
            android:textColor="#999999"/>

    </LinearLayout>
</LinearLayout>