<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@color/base_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cart_topnavigation_title"
            android:layout_centerHorizontal="true"
            android:text="购物车"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cart_topnavigation_edit"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/iv_cartnavigation"
            android:text="编辑"
            android:textColor="@color/text_gray"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_cartnavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/message_black"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/item_padding"
        android:layout_height="2px"/>
</LinearLayout>