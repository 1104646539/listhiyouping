<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#c8c8c8"/>
            <corners android:radius="6dp"/>

        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#FFFFFF"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF"
                android:type="linear"/>

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp"/>
            <!-- 应该是圆角 -->
            <corners android:radius="6dp"/>
        </shape>
    </item>
</layer-list>