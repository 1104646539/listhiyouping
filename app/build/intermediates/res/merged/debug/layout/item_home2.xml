<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:paddingTop="12dp"
              android:paddingBottom="12dp"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_home2_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/home2_1"/>

        <TextView
            android:id="@+id/item_home2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="虎符龙节文具套装"
            android:textColor="@color/text_color"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circlerect"
            android:paddingBottom="1dp"
            android:paddingLeft="8dp"
            android:gravity="center_horizontal"
            android:paddingRight="8dp"
            android:paddingTop="1dp"
            android:text="1元拼"
            android:textColor="#EEEEEE"/>
    </LinearLayout>

    <View
        android:id="@+id/item_home2_bg"
        android:layout_width="2px"
        android:layout_marginLeft="4dp"
        android:layout_height="match_parent"
        android:background="@color/item_padding"/>
</LinearLayout>