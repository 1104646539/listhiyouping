<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/item_padding"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/base_bg_color"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_home4_2_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_4_3_height"
            android:padding="5dp"
            android:background="@color/base_bg_color"
            android:scaleType="centerCrop"
            android:src="@drawable/home4_1"/>

        <TextView
            android:id="@+id/item_home4_2_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/base_bg_color"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:text="万仟堂  陶瓷同心杯"
            android:textColor="@color/item4_2_name"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_bg_color"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_home4_2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:text="299元"
                android:textColor="@color/home_item_textColor_orange"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/item_home4_2_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:text="356"
                android:textColor="@color/text_gray"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>