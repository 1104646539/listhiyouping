<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/item_padding"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_red"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="关于文字信息"
        android:textColor="@color/base_bg_color"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:text="关于你的文字描述"/>

    <View
        android:layout_width="100dp"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:background="@color/text_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="（荣誉历程 + 联系方式 + 保险理念 + 人生格言）"
        android:textSize="12sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/customize_magazine_edit_bg"
        android:hint="您的荣誉历程……"
        android:lines="3"
        android:paddingLeft="10dp"
        android:textColorHint="@color/text_gray"
        android:textSize="12sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/customize_magazine_edit_bg"
        android:hint="您的联系方式……"
        android:lines="3"
        android:paddingLeft="10dp"
        android:textColorHint="@color/text_gray"
        android:textSize="12sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/customize_magazine_edit_bg"
        android:hint="您的保险理念……"
        android:lines="3"
        android:paddingLeft="10dp"
        android:textColorHint="@color/text_gray"
        android:textSize="12sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/customize_magazine_edit_bg"
        android:hint="您的人生格言……"
        android:lines="3"
        android:paddingLeft="10dp"
        android:textColorHint="@color/text_gray"
        android:textSize="12sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/text_red"
        android:layout_marginBottom="10dp"
        android:id="@+id/magazine2_item3_submit"
        android:paddingBottom="6dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="6dp"
        android:text="确认提交"
        android:textColor="@color/base_bg_color"/>
</LinearLayout>