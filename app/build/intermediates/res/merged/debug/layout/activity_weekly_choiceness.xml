<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lishi.baijiaxing.weeklyChoiceness.WeeklyChoicenessActivity">

    <com.lishi.baijiaxing.view.TopNavigationBar
        android:id="@+id/topbar_weekly_choiceness"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:left_src="@drawable/back_top"
        app:text_title="积分兑换"
        app:title_color="@color/text_color"
        app:title_size="8sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_weekly_choiceness"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f83036"></android.support.v7.widget.RecyclerView>
</LinearLayout>
