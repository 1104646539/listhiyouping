<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lishi.baijiaxing.activity.TopTeacherDetailsActivity">

    <com.lishi.baijiaxing.view.TopNavigationBar
        android:id="@+id/navigation_topteacherdetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/base_bg_color"
        app:left_src="@drawable/back_top"
        app:right_src="@null"
        app:text_title="名字"
        app:title_color="@color/text_color"
        app:title_size="7sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shoppinglist"/>


   <!-- <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_topteacherdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>-->

    <ListView
        android:id="@+id/listview_topteacherdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_bg_color"
        android:divider="@color/base_bg_color"
        android:dividerHeight="1px"
        android:footerDividersEnabled="false"/>
</LinearLayout>
