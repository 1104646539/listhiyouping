<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/free_design_timeline_iv"
            android:layout_width="15dp"
            android:scaleType="centerCrop"
            android:layout_height="15dp"
            android:src="@drawable/checked_car_true"/>

        <View
            android:id="@+id/free_design_timeline_line"
            android:layout_width="2dp"
            android:layout_height="80dp"
            android:background="#818181"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/free_design_timeline_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="预约成功"
            android:textColor="@color/text_red"/>

        <TextView
            android:id="@+id/free_design_timeline_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="您已成功预约利世优品开门红您已成功预约利世优品开门红您已成功预约利世优品开门红您已成功预约利世优品开门红您已成功预约利世优品开门红"/>
    </LinearLayout>
</LinearLayout>