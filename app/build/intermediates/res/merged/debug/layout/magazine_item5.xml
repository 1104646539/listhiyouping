<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/customize_magazine_item5_photo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/customize_magazine_item5_1"/>

            <ImageView
                android:layout_width="wrap_content"  android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/magazine_item5_startCustomize"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/customize_magazine_item5_2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>