<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".orderAddressManage.view.DeliveryAddressActivity">

    <com.lishi.baijiaxing.view.TopNavigationBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/base_bg_color"
        app:left_src="@drawable/back_top"
        app:right_src="@null"
        app:text_title="收货地址"
        android:id="@+id/navigation_deliveryaddress"
        app:title_color="@color/text_color"
        app:title_size="7sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/shoppinglist"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/item_padding"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.lishi.baijiaxing.view.MyListView
                android:id="@+id/listview_deliveryaddress"
                android:layout_width="match_parent"
                android:dividerHeight="1px"
                android:divider="@color/shoppinglist"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_bg_color"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/text_red"
                android:id="@+id/tv_deliveryaddress_add"
                android:paddingBottom="8dp"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:paddingTop="8dp"
                android:text="添加收货地址"
                android:textColor="@color/base_bg_color"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
