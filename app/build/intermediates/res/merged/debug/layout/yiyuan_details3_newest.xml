<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="15dp"
              android:background="@color/item_padding"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/yiyuan_details3_newest_headPortrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/commend_head"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获奖者:  "/>

                <TextView
                    android:id="@+id/yiyuan_details3_newest_winningName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="152****1123"
                    android:textColor="@color/text_red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期号:  "/>

                <TextView
                    android:id="@+id/yiyuan_details3_newest_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="360期"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本期参与:  "/>

                <TextView
                    android:id="@+id/yiyuan_details3_newest_participationNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/text_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="份"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="揭晓时间:  "/>


                <TextView
                    android:id="@+id/yiyuan_details3_newest_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-10-22 16:50:10"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e10012"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/yiyuan_details3_newest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="幸运号码:  "
            android:textColor="@color/base_bg_color"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/yiyuan_details3_newest_winningNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/yiyuan_details3_newest1"
            android:text="10021122"
            android:textColor="@color/base_bg_color"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/yiyuan_details3_newest_countDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/yiyuan_btn_bg_white"
            android:gravity="center"
            android:text="计算详情"
            android:textColor="@color/text_red"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/base_bg_color"/>

    <LinearLayout
        android:id="@+id/yiyuan_details3_newest_isParticipation_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yiyuan_details3_newest_isParticipation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="您没有参加本期活动"
            android:textSize="16sp"/>

    </LinearLayout>


</LinearLayout>