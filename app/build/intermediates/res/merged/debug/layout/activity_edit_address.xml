<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_padding"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/base_bg_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_editaddress_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/back_top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑收货地址"
            android:textColor="@color/text_color"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_editaddress_delete"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:text="删除"
            android:textColor="@color/text_gray"
            android:textSize="14sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_bg_color"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/shoppinglist"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人："/>

                <EditText
                    android:id="@+id/ed_editaddress_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/base_bg_color"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/shoppinglist"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码："/>

                <EditText
                    android:id="@+id/ed_editaddress_number"
                    android:layout_width="match_parent"
                    android:maxLength="11"
                    android:layout_height="wrap_content"
                    android:background="@color/base_bg_color"
                    android:phoneNumber="true"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/shoppinglist"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地区："/>

                <TextView
                    android:id="@+id/edit_editaddress_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/base_bg_color"
                    android:clickable="true"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/shoppinglist"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址："/>

                <EditText
                    android:id="@+id/ed_editaddress_particular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/base_bg_color"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_editaddress_wheelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bom_editaddress"
            android:layout_marginTop="30dip"
            android:background="@color/base_bg_color"
            android:orientation="vertical"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/item_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_editaddress_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/cart_button_red"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="确定"
                    android:textColor="@color/base_bg_color"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.lishi.baijiaxing.Address.widget.WheelView
                    android:id="@+id/id_province"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/base_bg_color">
                </com.lishi.baijiaxing.Address.widget.WheelView>

                <com.lishi.baijiaxing.Address.widget.WheelView
                    android:id="@+id/id_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/base_bg_color">
                </com.lishi.baijiaxing.Address.widget.WheelView>

                <com.lishi.baijiaxing.Address.widget.WheelView
                    android:id="@+id/id_district"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/base_bg_color">
                </com.lishi.baijiaxing.Address.widget.WheelView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bom_editaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/base_bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_editaddress_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/text_red"
                android:clickable="true"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="设为默认地址"
                android:textColor="@color/base_bg_color"/>

            <TextView
                android:id="@+id/tv_editaddress_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:background="@color/text_red"
                android:clickable="true"
                android:paddingBottom="8dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="8dp"
                android:text="保存"
                android:textColor="@color/base_bg_color"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
