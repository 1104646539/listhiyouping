<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="2dp"
              android:background="@drawable/home_hot"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="6dp">

    <TextView
        android:id="@+id/item_home3_2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLines="1"
        android:text="茶叶罐"
        android:textColor="@color/text_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/item_home3_2_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:lines="1"
        android:maxLines="1"
        android:text="禅定纯锡纸叶罐"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_home3_2_photo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_4_2_height"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/home3_1"/>
    </LinearLayout>
</LinearLayout>