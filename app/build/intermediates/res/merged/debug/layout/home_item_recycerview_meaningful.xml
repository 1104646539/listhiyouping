            android:background="@color/item_padding"/>

        <ImageView
            android:id="@+id/iv_recyclerview_meaningful_7"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_height_90"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/src4"/>

        <View
            android:layout_width="@dimen/img_margin"
            android:layout_height="match_parent"
            android:background="@color/item_padding"/>

        <ImageView
            android:id="@+id/iv_recyclerview_meaningful_8"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_height_90"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/src4"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bigimg_margin"
        android:background="@color/item_padding"/>

    <ImageView
        android:id="@+id/iv_recyclerview_meaningful_9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_height_90"
        android:layout_marginLeft="@dimen/bigimg_margin"
        android:layout_marginRight="@dimen/bigimg_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/src5"/>
</LinearLayout>