<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/home_recycle_meaningful_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_margin"
        android:layout_marginTop="@dimen/title_margin"
        android:src="@drawable/meaningful_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_recyclerview_meaningful_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_height_90"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/src3"/>

        <View
            android:layout_width="@dimen/img_margin"
            android:layout_height="match_parent"
            android:background="@color/item_padding"/>

        <ImageView
            android:id="@+id/iv_recyclerview_meaningful_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_height_90"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/src3"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_margin"
        android:background="@color/item_padding"/>

