            android:layout_height="@dimen/home_height_90"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/src3"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/img_margin"
        android:background="@color/item_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_recyclerview_meaningful_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_height_90"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/src4"/>

        <View
            android:layout_width="@dimen/img_margin"
            android:layout_height="match_parent"
            android:background="@color/item_padding"/>

