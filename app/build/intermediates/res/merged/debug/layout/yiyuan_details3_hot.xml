<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="15dp"
              android:background="@color/item_padding"
              android:orientation="vertical"
              android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期号  "
            android:textColor="@color/yiyuan_details_textColor"/>

        <TextView
            android:id="@+id/yiyuan_details3_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="370"
            android:textColor="@color/yiyuan_details_textColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期"
            android:textColor="@color/yiyuan_details_textColor"/>
    </LinearLayout>

    <com.lishi.baijiaxing.view.HintProgressBar
        android:id="@+id/yiyuan_details3_progressBar"
        style="@style/YiYuanProgressBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:progressDrawable="@drawable/rob_progressbar_sytle"
        android:max="100"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:progress="10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总需 "
                    android:textColor="@color/yiyuan_details_textColor"/>

                <TextView
                    android:id="@+id/yiyuan_details3_needNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="180"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 份"
                    android:textColor="@color/yiyuan_details_textColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你参与了 "
                    android:textColor="@color/yiyuan_details_textColor"/>

                <TextView
                    android:id="@+id/yiyuan_details3_participationNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/text_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 份"
                    android:textColor="@color/yiyuan_details_textColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夺宝号码: "
                    android:textColor="@color/yiyuan_details_textColor"/>

                <TextView
                    android:id="@+id/yiyuan_details3_winningNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10001112"
                    android:textColor="@color/yiyuan_details_textColor"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余 "
                    android:textColor="@color/yiyuan_details_textColor"/>

                <TextView
                    android:id="@+id/yiyuan_details3_surplusNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="@color/text_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 份"
                    android:textColor="@color/yiyuan_details_textColor"/>
            </LinearLayout>

            <TextView
                android:id="@+id/yiyuan_details3_countDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/yiyuan_btn_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="计算详情"
                android:textColor="@color/text_red"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>